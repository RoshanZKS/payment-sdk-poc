{
  "name": "payment-sdk",
  "version": "1.0.2",
  "description": "A React-based payment SDK for merchant applications with secure iframe tokenization",
  "private": false,
  "main": "dist/PaymentSDK.js",
  "module": "dist/PaymentSDK.js",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "payment",
    "sdk",
    "react",
    "tokenization",
    "payment-gateway",
    "secure-payment"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:sdk": "rimraf dist && npx babel src --out-dir dist --copy-files --ignore '*/.test.js','*/.spec.js' && rimraf dist/DemoApp.js dist/DemoApp.css dist/index.js dist/index.css",
    "prepare": "npm run build:sdk"
  },
  "peerDependencies": {
    "axios": "^1.6.0",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.3",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.28.5",
    "axios": "^1.6.0",
    "react-scripts": "^5.0.1",
    "rimraf": "^6.1.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
